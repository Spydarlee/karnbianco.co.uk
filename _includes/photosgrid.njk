    {%- image photo.data.summaryImage, "", [340], "", photo %}
    <div class="card-container">
      <span class="card-title">{{ photo.data.title }}</span>

      <ul class="post-metadata">
        <li>ðŸ“… <time datetime="{{ photo.date | htmlDateString }}">{{ photo.date | readableDate("LLL yyyy") }}</time></li>
      </ul>

      <p class="card-description">{{ photo.data.description }}</p>
    </div>
  </a>

{% endfor %}
</div>
